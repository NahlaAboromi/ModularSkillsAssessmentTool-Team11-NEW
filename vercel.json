{
  "version": 2,
  "builds": [
    {
      "src": "hw2-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "build" }
    },
    {
      "src": "api/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/app.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|svg|ico|woff2?|ttf|map))",
      "dest": "/hw2-frontend/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/hw2-frontend/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
